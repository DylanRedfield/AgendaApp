<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dylanredfield.agendaapp2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_long"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dylanredfield.agendaapp.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dylanredfield.agendaapp.NewClassActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dylanredfield.agendaapp.AddAssignmentActivity"
            android:label="@string/new_class_label"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dylanredfield.agendaapp.ClassActivity"
            android:label="@string/new_class_label"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dylanredfield.agendaapp.AssignmentActivity"
            android:label="@string/new_class_label"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dylanredfield.agendaapp.AddAssignmentHomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dylanredfield.agendaapp.ImageFullScreenActivity"
            android:label="@string/new_class_label"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dylanredfield.agendaapp.EditClassInfoActivity"
            android:label="@string/edit_class"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dylanredfield.agendaapp.EditAssignmentInfoActivity"
            android:label="@string/new_class_label"
            android:screenOrientation="portrait" />
    </application>

</manifest>